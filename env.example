# Afri Estate App Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================

# Expo project ID (from app.json)
EXPO_PUBLIC_PROJECT_ID=704c3887-c2d3-4c2c-8cfb-6a23ac051cac

# Environment (development, preview, production)
EXPO_PUBLIC_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase URL (replace with your actual Supabase URL)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (replace with your actual anon key)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================

# Payment Gateway URLs
EXPO_PUBLIC_PAYMENT_SUCCESS_URL=https://afriestate.com/payment/success
EXPO_PUBLIC_PAYMENT_FAILURE_URL=https://afriestate.com/payment/failure
EXPO_PUBLIC_PAYMENT_CANCEL_URL=https://afriestate.com/payment/cancel

# =============================================================================
# MTN MOBILE MONEY API CONFIGURATION
# =============================================================================

# MTN MoMo API Configuration
EXPO_PUBLIC_MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
EXPO_PUBLIC_MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-momo-subscription-key
EXPO_PUBLIC_MTN_MOMO_API_USER_ID=your-mtn-momo-api-user-id
EXPO_PUBLIC_MTN_MOMO_API_KEY=your-mtn-momo-api-key
EXPO_PUBLIC_MTN_MOMO_ENVIRONMENT=sandbox # sandbox or production

# MTN MoMo Collection Configuration
EXPO_PUBLIC_MTN_MOMO_COLLECTION_PRIMARY_KEY=your-collection-primary-key
EXPO_PUBLIC_MTN_MOMO_COLLECTION_SECONDARY_KEY=your-collection-secondary-key

# MTN MoMo Disbursement Configuration (if needed)
EXPO_PUBLIC_MTN_MOMO_DISBURSEMENT_PRIMARY_KEY=your-disbursement-primary-key
EXPO_PUBLIC_MTN_MOMO_DISBURSEMENT_SECONDARY_KEY=your-disbursement-secondary-key

# MTN MoMo Callback URLs
EXPO_PUBLIC_MTN_MOMO_CALLBACK_URL=https://afriestate.com/api/momo/callback
EXPO_PUBLIC_MTN_MOMO_REDIRECT_URL=https://afriestate.com/payment/momo/success

# =============================================================================
# APP STORE CONFIGURATION
# =============================================================================

# iOS App Store
APPLE_TEAM_ID=your-apple-team-id
APPLE_APP_ID=your-app-store-connect-app-id
APPLE_API_KEY_ID=your-apple-api-key-id
APPLE_API_KEY_ISSUER_ID=your-apple-api-key-issuer-id

# Google Play Store
GOOGLE_SERVICE_ACCOUNT_KEY=your-google-service-account-key
GOOGLE_PLAY_TRACK=internal # or alpha, beta, production

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Analytics Configuration
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=true

# Sentry Configuration (for crash reporting)
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature flags for different environments
EXPO_PUBLIC_ENABLE_PAYMENTS=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# =============================================================================
# API ENDPOINTS
# =============================================================================

# API Base URLs
EXPO_PUBLIC_API_BASE_URL=https://api.afriestate.com
EXPO_PUBLIC_API_VERSION=v1

# Development API (for testing)
EXPO_PUBLIC_DEV_API_URL=https://dev-api.afriestate.com

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
EXPO_PUBLIC_DEFAULT_LANGUAGE=en

# Supported languages
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,fr,rw

# =============================================================================
# SECURITY
# =============================================================================

# Encryption keys (for sensitive data)
EXPO_PUBLIC_ENCRYPTION_KEY=your-encryption-key

# JWT Secret (for token generation)
JWT_SECRET=your-jwt-secret

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable development tools
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true
EXPO_PUBLIC_ENABLE_DEBUG_MODE=true

# Logging level
EXPO_PUBLIC_LOG_LEVEL=debug # debug, info, warn, error

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build configuration
EXPO_PUBLIC_BUILD_NUMBER=1
EXPO_PUBLIC_BUILD_VERSION=1.0.0

# =============================================================================
# TESTING
# =============================================================================

# Test configuration
EXPO_PUBLIC_TEST_MODE=false
EXPO_PUBLIC_MOCK_API_ENABLED=false

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Push notification configuration
EXPO_PUBLIC_PUSH_ENABLED=true
EXPO_PUBLIC_PUSH_SERVER_URL=https://push.afriestate.com

# =============================================================================
# STORAGE
# =============================================================================

# Local storage configuration
EXPO_PUBLIC_STORAGE_ENCRYPTION_ENABLED=true
EXPO_PUBLIC_MAX_STORAGE_SIZE=100MB

# =============================================================================
# NETWORK
# =============================================================================

# Network configuration
EXPO_PUBLIC_REQUEST_TIMEOUT=30000
EXPO_PUBLIC_RETRY_ATTEMPTS=3

# =============================================================================
# CACHE
# =============================================================================

# Cache configuration
EXPO_PUBLIC_CACHE_ENABLED=true
EXPO_PUBLIC_CACHE_DURATION=3600 # seconds

# =============================================================================
# PERFORMANCE
# =============================================================================

# Performance monitoring
EXPO_PUBLIC_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_IMAGE_OPTIMIZATION=true

# =============================================================================
# ACCESSIBILITY
# =============================================================================

# Accessibility features
EXPO_PUBLIC_ACCESSIBILITY_ENABLED=true
EXPO_PUBLIC_SCREEN_READER_SUPPORT=true

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Privacy policy URL
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://afriestate.com

# Terms of service URL
EXPO_PUBLIC_TERMS_URL=https://afriestate.com/terms

# Support email
EXPO_PUBLIC_SUPPORT_EMAIL=support@afriestate.com

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development environment overrides
if [ "$EXPO_PUBLIC_ENV" = "development" ]; then
  EXPO_PUBLIC_API_BASE_URL=https://dev-api.afriestate.com
  EXPO_PUBLIC_ENABLE_DEBUG_MODE=true
  EXPO_PUBLIC_LOG_LEVEL=debug
fi

# Preview environment overrides
if [ "$EXPO_PUBLIC_ENV" = "preview" ]; then
  EXPO_PUBLIC_API_BASE_URL=https://staging-api.afriestate.com
  EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
  EXPO_PUBLIC_LOG_LEVEL=info
fi

# Production environment overrides
if [ "$EXPO_PUBLIC_ENV" = "production" ]; then
  EXPO_PUBLIC_API_BASE_URL=https://api.afriestate.com
  EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
  EXPO_PUBLIC_LOG_LEVEL=warn
  EXPO_PUBLIC_ENABLE_DEV_TOOLS=false
fi 
